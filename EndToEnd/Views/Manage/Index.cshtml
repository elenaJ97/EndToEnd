<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>Лозинка:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Променете лозинка", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>


    </dl>
