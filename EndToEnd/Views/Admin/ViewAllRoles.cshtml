@model IEnumerable<EndToEnd.Models.RoleDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>
    @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Додади улога", "AddRole", null, new { @class = "btn btn-primary" })
</p>
<br />
<table class="table" style="outline-style: solid; outline-width: 2px;">
    <tr style="background-color:#083755; outline-style: solid; outline-width: 2px;">
        <th style="color:gray">
            Улога
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @if (item.RoleName.ToLower() != "administrator")
                {
                    @Html.ActionLink("Избриши", "DeleteUserRole",
                   new { RoleName = item.RoleName },
                   new
                   {
                       onclick =
                   "return confirm('Are you sure you wish to delete this role?');"
                   })
                }
            </td>

        </tr>
    }
</table>

