@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @if (User.IsInRole("Student"))
            {
                @Html.ActionLink("Здраво " + User.Identity.GetUserName() + "!", "Details", "Manage", new { id = User.Identity.GetUserId() }, htmlAttributes: new { title = "Manage" })
            }
            @if (User.IsInRole("Professor"))
            {
                @Html.ActionLink("Здраво " + User.Identity.GetUserName() + "!", "Details1", "Manage", new { id = User.Identity.GetUserId() }, htmlAttributes: new { title = "Manage" })
            }

        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Одјава</a></li>
    </ul>
    }
}
else if (@ViewBag.Title == "Почетна")
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Најава", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}