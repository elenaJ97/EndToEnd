@model IEnumerable<EndToEnd.Models.Course>

@{
    ViewBag.Title = "Index";
}
<h2>Предмети од факултетската листа</h2>
<h4>Одберете ги вашите тековни предмети</h4>




<p>
    @if (User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.ActionLink("Детали", "Details", new { id = item.Code }) |

                @Html.ActionLink("Додади", "Delete", new { id = item.Code })
            </td>
        </tr>
    }

</table>
